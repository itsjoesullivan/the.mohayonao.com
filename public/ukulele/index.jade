extend ../lib/layout

block config
  - $.title = "hyper ukulele notation"
  - $.path  = "/ukulele/"
  - $.jslist  = ["/lib/codemirror.js","/lib/timbre.js","ukulele.js","demo.js","index.js"]
  - $.csslist = ["/lib/codemirror.css","ukulele.css","index.css"]

block content
  h1 #{$.title}
  #unit
    div(id="ctrl")
      select(id="demo")    
      button(id="play",class="btn",title="play") Play
      button(id="tweet",class="btn",title="twitter") Tweet
      button(class="btn",title="help")
        a(href="./usage.html",target="usage") Usage
    div
      textarea(id="data",rows=12)
    div
      img(id="result")
  div.ads
    include ../lib/ads.html
