extend ../layout

block config
  - $.title = "ukulele"
  - $.path  = "/ukulele/"
  - $.use("//cdnjs.cloudflare.com/ajax/libs/codemirror/4.3.0/codemirror.min.js")
  - $.use("//cdnjs.cloudflare.com/ajax/libs/codemirror/4.3.0/codemirror.min.css")
  - $.use("timbre.js")
  - $.use("ukulele.js")
  - $.use("demo.js")
  - $.use("ukulele.css")

block content
  h1.title #{$.title}

  #app
    div#ctrl
      select#demo
      button.btn.btn-default#play  Play
      button.btn.btn-default#tweet Tweet
      a.btn.btn-link(href="./usage.html",target="usage") Usage
    div
      textarea#data(rows=12)
    div
      img#result
