@import url("http://fonts.googleapis.com/css?family=Lato:300,400,700,900");

FORECOLOR = #193056
SIDEBAR   = #e3e3e3
LINKCOLOR = #2980B9

SIDEBAR_WIDTH = 200px

*
  box-sizing         border-box
  -moz-box-sizing    border-box
  -webkit-box-sizing border-box
  -o-box-sizing      border-box
  -ms-box-sizing     border-box

html
  height 100%
  
body
  margin 0
  height 100%
  font   14px/1.231 "Lato", sans-serif
  font-weight 300
  color FORECOLOR

a
 color LINKCOLOR
 text-decoration none
 :hover
   text-decoration underline

.pull-left
  float left

.pull-right
  float right

.hidden
  display none

.jp
  font-family serif
  font-size   90%

.monospace
  font-family 'Courier New', monospace

.ads
  margin 5px 0

#sidebar
  position fixed
  top    0
  left   0
  bottom 0
  width      SIDEBAR_WIDTH
  overflow-y auto
  overflow-x hidden
  padding    10px
  background SIDEBAR

  *
    padding 0
    margin  0
  a
    color FORECOLOR
  h1
    margin  10px 0
    font-size 14px
    font-weight 400
  h2
    margin-top 10px
    font-size  12px
    font-weight 400
  img
    width  180px
    height @width  
  ul
    list-style  none
    margin-left 20px
    
    li
      padding 5px
      

#content
  position fixed
  top    0
  left   0
  bottom 0
  font-family 'Courier New', monospace
  font-size   16px
  height      100%  
  margin-left SIDEBAR_WIDTH
  padding     10px

  h1
    margin-left 10px

  #unit
    padding 10px

@media screen and (max-width: 650px)
  #sidebar
    display     none
  #content
    margin-left 0
  .ads
    position absolute
    left     0
