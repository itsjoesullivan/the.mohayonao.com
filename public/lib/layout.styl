html
  height: 100%
  
body
  margin: 0
  height: 100%
  font: 12px Helvetica, Arial, sans-serif

a
 color: #336
 text-decoration: none
 :hover
   text-decoration: underline

.pull-left
  float: left

.pull-right
  float: right

.hidden
  display: none

box-shadow()
  box-shadow: arguments
  -webkit-box-shadow: arguments
   
#sidebar
  position: fixed
  top: 0; left: 0; bottom: 0
  width: 180px
  overflow-y: auto
  overflow-x: hidden
  padding: 10px
  border-right: 1px solid #bbb
  box-shadow: 0 0 20px #ccc
  background: #f0f0f0

  *
    padding: 0
    margin: @padding
  h1
    margin: 10px 0
    font-size: 14px
  h2
    margin-top: 10px
    font-size: 12px
    color: #336
  img
    width: 180px
    height: @width
  
  ul
    list-style: none
    margin-left: 20px
    
    li
      padding: 5px
      

#content
  font-family: 'Courier New', monospace
  font-size: 16px
  height: 100%  
  margin-left: 200px
  padding: 10px

  h1
    margin-left: 10px

  #container
    padding: 10px
