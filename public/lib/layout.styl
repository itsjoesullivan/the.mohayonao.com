SIDEBAR_FORECOLOR = #193056
SIDEBAR_BACKCOLOR = #e3e3e3


html
  height: 100%
  
body
  margin: 0
  height: 100%
  font: 12px Helvetica, Arial, sans-serif

a
 color: SIDEBAR_FORECOLOR
 text-decoration: none
 :hover
   text-decoration: underline

.pull-left
  float: left

.pull-right
  float: right

.hidden
  display: none

.jp
  font-family: serif
  font-size: 90%

.monospace
  font-family: 'Courier New', monospace

.ads
  margin 40px 0

#sidebar
  position: fixed
  top: 0; left: 0; bottom: 0
  width: 180px
  overflow-y: auto
  overflow-x: hidden
  padding: 10px
  background: SIDEBAR_BACKCOLOR

  *
    padding: 0
    margin: @padding
  h1
    margin: 10px 0
    font-size: 14px
  h2
    margin-top: 10px
    font-size: 12px
    color: SIDEBAR_FORECOLOR
  img
    width: 180px
    height: @width
  
  ul
    list-style: none
    margin-left: 20px
    
    li
      padding: 5px
      

#content
  font-family: 'Courier New', monospace
  font-size: 16px
  height: 100%  
  margin-left: 200px
  padding: 10px

  h1
    margin-left: 10px

  #unit
    padding: 10px

    a
     color: #00f
     text-decoration: underline

@media screen and (max-width: 650px)
  #sidebar
    display: none
  #content
    margin-left: 0
