@import url("http://fonts.googleapis.com/css?family=Lato:300,400,700,900")
@import url("http://fonts.googleapis.com/css?family=Inconsolata")

TURQUOISE     = #1ABC9C
GREEN_SEA     = #16A085
EMERALD       = #2ECC71
NEPHRITIS     = #27AE60
PETER_RIVER   = #3498DB
BELIZE_HOLE   = #2980B9
AMETHYST      = #9B59B6
WISTERIA      = #8E44AD
WET_ASPHALT   = #34495E
MIDNIGHT_BLUE = #2C3E50
SUN_FLOWER    = #F1C40F
ORANGE        = #F39C12
CARROT        = #E67E22
PUMPKIN       = #D35400
ALIZARIN      = #E74C3C
POMEGRANATE   = #C0392B
CLOUDS        = #ECF0F1
SILVER        = #BDC3C7
CONCRETE      = #95A5A6
ASBESTOS      = #7F8C8D
GRAY_DARKER   = #222
GRAY_DARK     = #333
GRAY          = #555
GRAY_LIGHT    = #777
GRAY_LIGHTER  = #EEE
WHITE         = #FFF

THIN   = 300
NORMAL = 400
BOLD   = 700
FAT    = 900

TEXT_COLOR  = WET_ASPHALT
BG_COLOR    = WHITE
LINK_COLOR  = PETER_RIVER
LINK_HOVER_COLOR = ALIZARIN

html
  position relative
  width  100%
  height 100%
  min-height 100%

body
  width  100%
  height 100%
  font-family "Lato", sans-serif
  font-size   20px
  font-weight THIN
  line-height 1.428571429
  color TEXT_COLOR
  background-color #fff

button
  width 100px

#wrap
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -40px
  padding 20px

#push
#footer
  height 40px

#footer
  background-color #f5f5f5

#footer > .container
  margin 0
  padding 8px 12px 0
  font-size 16px

  a
    color GRAY_LIGHT

  img
    width  16px
    height 16px
    margin -4px 4px 0 8px
    opacity 0.6

.title
  font-size 64px
  font-weight FAT
  margin-top 0
  margin-bottom 20px

.well
  border-width 0
  box-shadow none

.solid
  border-style solid

.dashed
  border-style dashed

.dotted
  border-style dotted

.google-adsense
  margin 20px 0
  width 728px
  height 90px
  background-color CLOUDS

@media screen and (max-width: 640px)
  .title
    font-size 32px
    font-weight FAT
    margin-top 0
    margin-bottom 10px

  #wrap
    margin 0
    padding 5px

  #push
  #footer
    display none

  .google-adsense
    margin 20px 0 0 -5px
    width 320px
    height 50px
    background-color CLOUDS
