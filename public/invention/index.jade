extend ../layout

block config
  - $.title = "endless invention"
  - $.path  = "/invention/"
  - $.use("//cdnjs.cloudflare.com/ajax/libs/vue/0.10.5/vue.min.js")
  - $.use("pico.js")
  - $.use("reverb.js")

block content
  h1.title #{$.title}

  #app
    canvas#canvas(width="150",height="200")
    ol
      li choose
        .form-group
          .btn-group
            button.btn.btn-default(v-on="click: mode='normal'",class="{{ mode=='normal' ? 'btn-primary' : '' }}") Inventionen 13 a-moll
            button.btn.btn-default(v-on="click: mode='markov'",class="{{ mode=='markov' ? 'btn-primary' : '' }}") Markov Inventionen
      li click J.S.Bach to play/pause music
      li mouseover Y : control EFX Depth
