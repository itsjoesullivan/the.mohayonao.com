extend ../layout

block config
  - $.title = "scalable mario"
  - $.path  = "/scalable-mario/"
  - $.add("libs/timbre.js")
  - $.add("libs/subcollider.js")
  - $.add("libs/scales.js")
  - $.add("libs/tunings.js")
  - $.add("/lib/LigatureSymbols-2.11.css")

block content
  h1 #{$.title}
  #unit
    div(style="margin-bottom:25px")
      button(id="play",class="lsf-icon",title="play") Play
      button(id="tweet",class="lsf-icon",title="twitter") Tweet this mario
    div
      label(for="scale") Scale
      select(name="scale",id="scale")
      button(id="random-scale",class="lsf-icon",title="random") random
    div
      label(for="tuning") Tuning
      select(name="tuning",id="tuning")
      button(id="random-tuning",class="lsf-icon",title="random") random
    p use:
      ul
        li: a(href="http://mohayonao.github.com/timbre.js") timbre.js
        li: a(href="http://mohayonao.github.com/sub.js") subcollider.js
