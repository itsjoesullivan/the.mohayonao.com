@import "../lib/layout"

#content
  text-align: center

  h1
    display: inline-block
    margin-right: 25px

  #editor-container
    width: 100%

  editor()
    width: 400px
    height: 400px
    border: solid 1px #999
    margin: 0 auto
    display: block

  #editor
    editor()

  #result
    editor()
    font-family: 'Courier', monospace
    font-size: 8px
      
  #msg
    margin: 5px
  
  .button
    margin: 5px
    font-size: 32px
    display: inline-block
    width: 40px
