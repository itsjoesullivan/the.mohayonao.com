@import "../lib/layout"

#content
  text-align: center

  h1
    display: inline-block
    margin-right: 25px

  #editor-container
    width: 100%

  editor()
    width: 400px
    height: 400px
    border: solid 1px #666
    margin: 0 auto
    display: block

  #editor
    editor()

  #dialog
    editor()
    font-size: 48px

    span
      display: inline-block

    .caption
      margin-top: 20px

    .lsf-icon
      color: #666
      cursor: pointer
      width: 80px

    #frames, #speed
      width: 160px
      border: solid 1px #000
      margin-right: 15px

  #result
    editor()
      
  #msg
    margin: 5px
  
  .button
    margin: 5px
    font-size: 32px
