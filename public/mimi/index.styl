@import "../lib/layout"

#content
  padding: 0
  overflow-y: scroll

  #preview
    width : 100%
    height: 100%

    -webkit-full-screen
      position: absolute
      top:0; left:0
      width : 100%
      height: 100%

  #unit
    position: absolute
    top: 10px
    left: 10px

    #tips
      background: #fff
      opacity: 0.9
      padding: 10px
      border-radius: 5px
