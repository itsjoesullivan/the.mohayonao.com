extend ../lib/layout

block config
  - $.title = "one-liner-music"
  - $.path  = "/one-liner-music/"
  - $.add("libs/pico.js")
  - $.add("libs/MutekiTimer.js")
  - $.add("/lib/LigatureSymbols-2.11.css")

block content
  h1 #{$.title}
  #unit
    div(style="margin-bottom:25px")
      button(id="play",class="lsf-icon",title="play") Play
      button(id="tweet",class="lsf-icon",title="twitter") Tweet this function
    div(id="f1")
      span function (t) {
      div(id="f2")
        input(type="text",id="func",placeholder="return")
      span }
    ul(id="history-container")
      li(id="history") History
  div.ads
    include ../lib/ads.html
